{
  "name": "@nightgrey/ansi",
  "private": false,
  "description": "A library providing utilities for working with ANSI escape sequences (ported from charmbracelet/x/ansi)",
  "homepage": "https://nightgrey.github.io/ansi",
  "repository": {
    "url": "https://github.com/nightgrey/ansi",
    "type": "github"
  },
  "version": "0.0.5",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "scripts": {
    "build": "zshy",
    "dev": "nodemon --watch src --ext ts --exec 'zshy'",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "test": "vitest run && bun typecheck",
    "test:watch": "vitest run --watch",
    "typecheck": "tsc --noEmit",
    "bench": "vitest bench",
    "docs": "bunx typedoc"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "@ansi-tools/parser": "^1.0.10",
    "@thi.ng/associative": "^7.1.10",
    "@thi.ng/color": "^5.7.58",
    "@thi.ng/memoize": "^4.0.25",
    "@thi.ng/strings": "^3.9.21",
    "@thi.ng/vectors": "^8.6.5",
    "ansi-truncate": "^1.3.0",
    "slice-ansi": "^7.1.0",
    "string-length": "^6.0.0",
    "wcwidth": "^1.0.1",
    "wrap-ansi": "^9.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/node": "^24.2.1",
    "@types/wcwidth": "^1.0.2",
    "nodemon": "^3.1.10",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.10",
    "vitest": "^3.2.4",
    "zshy": "^0.2.5"
  },
  "zshy": {
    "exports": {
      ".": "./src/index.ts",
      "./*": "./src/*"
    }
  },
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts"
}
