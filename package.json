{
  "name": "@nightgrey/ansi",
  "private": false,
  "description": "A library providing utilities for working with ANSI escape sequences (ported from charmbracelet/x/ansi)",
  "homepage": "https://nightgrey.github.io/ansi",
  "repository": {
    "url": "https://github.com/nightgrey/ansi",
    "type": "github"
  },
  "version": "0.0.3",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "scripts": {
    "build": "zshy",
    "test": "vitest run && bun typecheck",
    "test:watch": "vitest run --watch",
    "typecheck": "tsc --noEmit",
    "bench": "vitest bench",
    "docs": "bunx typedoc"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "@ansi-tools/parser": "^1.0.6",
    "@thi.ng/color": "^5.7.47",
    "@thi.ng/strings": "^3.9.16",
    "@thi.ng/vectors": "^8.3.3",
    "ansi-truncate": "^1.2.0",
    "slice-ansi": "^7.1.0",
    "string-length": "^6.0.0",
    "wcwidth": "^1.0.1",
    "wrap-ansi": "^9.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/node": "^24.0.15",
    "@types/wcwidth": "^1.0.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.7",
    "vitest": "^3.2.4",
    "zshy": "^0.2.5"
  },
  "zshy": {
    "exports": {
      ".": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "docs"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts"
}
